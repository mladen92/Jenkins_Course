pipeline {
      agent any
      stages {
            stage('Build Application Stage') {
                  steps {
                        echo 'Tomcat sample first stage'
                        sh 'mvn -f java-tomcat-sample/pom.xml clean package'
                  }
                  post{
                        success{
                        echo "Now Archiving the Artifacts..."
                        archiveArifacts artifacts: '**/*.war'
                        }
                  }
            }
       }
   }
